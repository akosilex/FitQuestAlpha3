<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:padding="24dp">

    <ImageView
        android:id="@+id/appLogo"
        android:layout_width="362dp"
        android:layout_height="129dp"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:id="@+id/workoutButtonContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="28dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appLogo">

        <Button
            android:id="@+id/startAssessment"
            style="@style/AppButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:text="Start FitQuest Demo" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/otherButtonContainer"
        android:layout_width="299dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/workoutButtonContainer"
        app:layout_constraintVertical_bias="0.034">

        <Button
            android:id="@+id/rewardsButton"
            style="@style/AppButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:text="Rewards"
            android:textSize="13.5sp" />

        <Button
            android:id="@+id/profileButton"
            style="@style/AppButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:text="Log Out" />

        <Button
            android:id="@+id/bmiCalculatorButton"
            style="@style/AppButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:text="BMI" />
    </LinearLayout>

    <Button
        android:id="@+id/upperBodyButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="73dp"
        android:text="Upper Body Workout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/otherButtonContainer"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/coreButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Core Workout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/upperBodyButton"
        app:layout_constraintVertical_bias="0.048" />

    <Button
        android:id="@+id/legsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Leg Workout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/coreButton"
        app:layout_constraintVertical_bias="0.091" />

    <Button
        android:id="@+id/cardioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cardio Workout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/legsButton"
        app:layout_constraintVertical_bias="0.099" />

    <TextView
        android:id="@+id/dailyProgressMonitorTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Completed Workouts Today: 0/4"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/upperBodyButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/otherButtonContainer" />

</androidx.constraintlayout.widget.ConstraintLayout>
